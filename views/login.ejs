<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center fs-2 mb-3"><i class="uil uil-unlock"></i>  <%= userType %> Login</h1>
                <%- include ("./partials/messages") %>
                <form action="/users/<%= userType.toLowerCase() %>/login" method="POST">
                    <div class="form-group">
                    <label for="email">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="form-control"
                        placeholder="Enter Email"
                        value="<%= typeof email !== 'undefined' ? email : '' %> "
                    />
                    </div>
                    <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="form-control"
                        placeholder="Enter Password"
                    />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
                <p class="lead mt-4">
                    No Account? <a href="/users/<%= userType.toLowerCase() %>/register">Register</a>
                </p>
            </div>
        </div>
    </div>
</div>

<br>

